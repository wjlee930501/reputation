# ── Database ──────────────────────────────────────────────────────
DATABASE_URL=postgresql+asyncpg://reputation:reputation@localhost:5432/reputation
SYNC_DATABASE_URL=postgresql://reputation:reputation@localhost:5432/reputation

# ── Redis ─────────────────────────────────────────────────────────
REDIS_URL=redis://localhost:6379/0

# ── Anthropic — 콘텐츠 생성 ───────────────────────────────────────
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-sonnet-4-5
CLAUDE_MODEL_FAST=claude-haiku-4-5-20251001

# ── Google Cloud — Imagen 3 이미지 생성 + GCS 저장 ─────────────────
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=us-central1
GCP_STORAGE_BUCKET=reputation-images
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ── OpenAI — SoV 쿼리 발송·파싱 ──────────────────────────────────
OPENAI_API_KEY=sk-...
OPENAI_MODEL_QUERY=gpt-4o
OPENAI_MODEL_PARSE=gpt-4o-mini

# ── Perplexity — SoV 측정 ─────────────────────────────────────────
PERPLEXITY_API_KEY=pplx-...

# ── Slack ─────────────────────────────────────────────────────────
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...

# ── Report ────────────────────────────────────────────────────────
REPORT_OUTPUT_DIR=/tmp/reports

# ── App ───────────────────────────────────────────────────────────
APP_ENV=development
ADMIN_SECRET_KEY=change-me-in-production

# ── SoV ───────────────────────────────────────────────────────────
SOV_REPEAT_COUNT=10
